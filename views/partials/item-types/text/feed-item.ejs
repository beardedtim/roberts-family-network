<div class="card">
  <div class="card-body">
    <div class="card-title">
      <a href="/members/<%= item.author.id %>">
        <img class="profile-picture img"
          src="<%= item.author.profile.avatar || `https://ui-avatars.com/api/?name=${item.author.username}&rounded=true`%>"
          alt="<%= item.author.username%> profile picture" />
      </a>
        posted <%= methods.formatDistance(new Date(item.created_at), new Date(), { addSuffix: true }) %>
      </div>
      <h3>
        <%= item.data.title %>
      </h3>
      <div class="card-text">
        <%- item.data.raw %>
      </div>
      <a href="/items/<%= item.id %>" class="btn btn-primary">See Post</a>
  </div>
</div>